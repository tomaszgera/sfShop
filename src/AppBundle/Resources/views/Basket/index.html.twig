{% extends "::base.html.twig" %}

{% block title %}Koszyk{% endblock %}

{% block body %}
    <h1>Koszyk</h1>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nazwa</th>
            <th>Cena</th>
            <th>Ilość</th>
            <th>Wartość</th>
            <th>
                {% if basket.products %}
                <a href="{{ path('basket_clear') }}" class="btn btn-primary">Wyczyść koszyk</a>
                {% endif %}
            </th>
        </tr>
        </thead>
        <tbody>
        {% for product in basket.products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }} zł</td>
                <td>{{ product.quantity }}</td>
                <td></td>
                <td>
                    <a href="{{ path('basket_remove', {'id': product.id}) }}" class="btn btn-primary">Usuń produkt</a>
                </td>
            </tr>
            {% else %}
                <tr>
                    <td colspan="5">Koszyk jest pusty</td>
                </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td>Podsumowanie</td>
                <td>{{ basket.price|number_format(2,'.',' ') }} zł</td>
                <td>{{ basket.quantity }}</td>
                <td></td>
            </tr>
        </tfoot>
    </table>

        
{% endblock %}