{% trans_default_domain 'FOSUserBundle' %}

<form class="form-signin" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" novalidate>
    <h2 class="form-signin-heading">Zarejestruj siÄ™</h2>

    {{ form_row(form.email, { 'attr': {'class': 'form-control'} }) }}

    {{ form_row(form.username, { 'attr': {'class': 'form-control'} }) }}

    {{ form_row(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}

    {{ form_row(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
    
    {{ form_rest(form) }}
    <div>
        <input class="btn btn-lg btn-primary btn-block" type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
</form>